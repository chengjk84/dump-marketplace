/ Main sidebar
.sidebar.sidebar-main.sidebar-default
  .sidebar-content
    / Title
    .category-title.h6
      %span Components
      %ul.icons-list
        %li
          %a{:href => "boxed_default.html#"}
            %i.icon-gear
    / /title
    / Search task
    .sidebar-category
      .category-title
        %span Search task
        %ul.icons-list
          %li
            %a{"data-action" => "collapse", :href => "boxed_default.html#"}
      .category-content
        %form{:action => "boxed_default.html#"}
          .has-feedback.has-feedback-left
            %input.form-control{:placeholder => "Type and hit Enter", :type => "search"}/
            .form-control-feedback
              %i.icon-search4.text-size-base.text-muted
    / /search task
    / Action buttons
    .sidebar-category
      .category-title
        %span Action buttons
        %ul.icons-list
          %li
            %a{"data-action" => "collapse", :href => "boxed_default.html#"}
      .category-content
        .row
          .col-xs-6
            %button.btn.bg-teal-400.btn-block.btn-float.btn-float-lg{:type => "button"}
              %i.icon-git-branch
              %span Branch
            %button.btn.bg-purple-300.btn-block.btn-float.btn-float-lg{:type => "button"}
              %i.icon-mail-read
              %span Messages
          .col-xs-6
            %button.btn.bg-warning-400.btn-block.btn-float.btn-float-lg{:type => "button"}
              %i.icon-stats-bars
              %span Statistics
            %button.btn.bg-blue.btn-block.btn-float.btn-float-lg{:type => "button"}
              %i.icon-people
              %span Users
    / /action buttons
    / Task navigation
    .sidebar-category.sidebar-category-visible
      .category-title
        %span Navigation
        %ul.icons-list
          %li
            %a{"data-action" => "collapse", :href => "boxed_default.html#"}
      .category-content.no-padding
        %ul.navigation.navigation-main.navigation-accordion
          %li.navigation-header
            %span Actions
            %i.icon-menu{:title => "Actions"}
          %li
            %a{:href => "boxed_default.html#"}
              %i.icon-googleplus5
              %span Create task
          %li
            %a{:href => "boxed_default.html#"}
              %i.icon-portfolio
              %span Create project
          %li
            %a{:href => "boxed_default.html#"}
              %i.icon-compose
              %span Edit task list
          %li
            %a{:href => "boxed_default.html#"}
              %i.icon-user-plus
              %span
                Assign users
                %span.label.label-success 94 online
          %li
            %a{:href => "boxed_default.html#"}
              %i.icon-collaboration
              %span Create team
          %li.navigation-header
            %span Tasks
            %i.icon-menu{:title => "Tasks"}
          %li
            %a{:href => "boxed_default.html#"}
              %i.icon-files-empty
              %span All tasks
          %li
            %a{:href => "boxed_default.html#"}
              %i.icon-file-plus
              %span
                Active tasks
                %span.badge.badge-default 28
          %li
            %a{:href => "boxed_default.html#"}
              %i.icon-file-check
              %span Closed tasks
          %li.navigation-divider
          %li
            %a{:href => "boxed_default.html#"}
              %i.icon-reading
              %span
                Assigned to me
                %span.badge.badge-info 86
          %li
            %a{:href => "boxed_default.html#"}
              %i.icon-make-group
              %span
                Assigned to my team
                %span.badge.badge-info 47
          %li
            %a{:href => "boxed_default.html#"}
              %i.icon-cog3
              %span Settings
    / /task navigation
